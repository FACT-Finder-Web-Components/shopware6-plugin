{% block sw_cms_element_campaigns_config %}
  <div>

    <sw-switch-field label="Advisor Campaign" v-model="element.config.enableAdvisorCampaign.value">
    </sw-switch-field>

    <sw-container v-if="element.config.enableAdvisorCampaign.value">
      <sw-text-field
        label="Advisor Campaign Name"
        placeholder="Advisor Campaign Name"
        v-tooltip="$tc('sw-cms.elements.campaigns.config.leaveFreeIfNotSpecified')"
        v-model="element.config.advisorCampaignName.value">
      </sw-text-field>
    </sw-container>

    <sw-switch-field label="Feedback Campaign" v-model="element.config.enableFeedbackCampaign.value">
    </sw-switch-field>

    <sw-container v-if="element.config.enableFeedbackCampaign.value">
      <sw-text-field
        label="Feedback Campaign Label"
        placeholder="Feedback Campaign Label"
        v-tooltip="$tc('sw-cms.elements.campaigns.config.leaveFreeIfNotSpecified')"
        v-model="element.config.feedbackCampaignLabel.value">
      </sw-text-field>
    </sw-container>

    <sw-switch-field label="Redirect Campaign" v-model="element.config.enableRedirectCampaign.value">
    </sw-switch-field>
  </div>
{% endblock %}

{% block component_factfinder_record_list %}
  <ff-record-list
    {% if id %} id="{{ id }}" {% endif %}
    class="{{ class }}"
    subscribe="{{ subscribe ? 'true' : 'false' }}"
    {{ infiniteScrolling ? 'infinite-scrolling infinite-debounce-delay=#{infiniteDebounceDelay}' : '' }}
    {{ ssr ? 'ssr' : 'unresolved' }}>
    {% block component_factfinder_record %}
      {% if ssr %}
        <template data-role="record">
          {% sw_include '@Parent/storefront/components/factfinder/record.html.twig' %}
        </template>
        <ssr-record-template>
          {% sw_include '@Parent/storefront/components/factfinder/record.html.twig' %}
        </ssr-record-template>
      {% else %}
        {% sw_include '@Parent/storefront/components/factfinder/record.html.twig' %}
      {% endif %}
    {% endblock %}
  </ff-record-list>
  {% if ssr %}
    <ssr-paging></ssr-paging>
  {% endif %}
{% endblock %}
